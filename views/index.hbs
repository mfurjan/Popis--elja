<h2 class="text-3xl font-semibold text-blue-600 mb-6">My Goals:</h2>

<!-- Goals List -->
<ul class="space-y-6">
  {{#each goals}}
    <li class="bg-white p-6 rounded-xl shadow-xl transition-all hover:scale-105 hover:shadow-2xl transform duration-300">
      <h3 class="text-2xl font-semibold text-indigo-700">{{this.title}}</h3>
      <p class="text-lg text-gray-700 mt-2">{{this.description}}</p>
    </li>
  {{else}}
    <li class="text-gray-500 italic">No goals yet. Add some below!</li>
  {{/each}}
</ul>

<!-- Add Goal Form -->
<div class="mt-10">
  <h3 class="text-xl font-semibold text-purple-600 mb-4">Add a New Goal:</h3>
  <form action="/" method="POST" class="bg-white p-6 rounded-xl shadow-lg space-y-4">
    <div>
      <label for="title" class="block text-gray-800 font-medium">Goal Title</label>
      <input type="text" name="title" id="title" placeholder="Enter a goal title..." class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
    </div>

    <div>
      <label for="description" class="block text-gray-800 font-medium">Goal Description</label>
      <textarea name="description" id="description" placeholder="Describe your goal..." class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
    </div>

    <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-indigo-600 text-white py-3 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300">
      Add Goal
    </button>
  </form>
</div>

